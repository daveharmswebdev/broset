extends includes/layout.pug

block content
	.broset.col-sm-10.col-sm-offset-1
		h1 Broset
		h2 Patient
		.row
			.col-sm-1.col-sm-offset-1
				p #{patient.room}
			.col-sm-3
				p #{patient.lastName}, #{patient.firstName}
			.col-sm-3
				p #{patient.physician}
			.col-sm-3
				p #{patient.admissionDate}
		.broset--add
			h2 New Score
			form(method='POST')
				.form-group
					label(for='score') Score
					input.broset--input#score(type='text', name='score', placeholder='i.e. 6')
				.form-group
					label(for='score') Intervention
					input.broset--input#intervention(type='text', name='intervention', placeholder='i.e. 6')
				button.btn.btn-primary(type='submit') Add Score
		.broset--history
			h2 Patient Broset History
			each score in scores
				.row
					.col-sm-2.col-sm-offset-1
						p #{score.score}
					.col-sm-6
						p #{score.intervention}
					.col-sm-2
						p #{score.date}

